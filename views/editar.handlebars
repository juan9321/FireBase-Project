

<p class="text-start fs-5">Atualizar Agendamento</p>
<p>
    <form action="/atualizar" method="POST">
        <input type="hidden" class="form-control" id="id" name="id" value="{{data.id}}">
        <div class="mb-3 text-start">
            <label class="form-label">Nome:</label>
            <input type="name" name="nome" class="form-control" id="nome" value="{{data.nome}}">
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Telefone:</label>
            <input type="number" name="telefone" class="form-control" id="telefone" placeholder="(00)00000-0000" value="{{data.telefone}}">
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Origem:</label>
            <select class="form-select" aria-label="Default select example" id="origem" name="origem">
                <option value="celular" {{#if (eq data.origem "celular")}}selected{{/if}}>Celular</option>
                <option value="whatsapp" {{#if (eq data.origem "whatsapp")}}selected{{/if}}>Whatsapp</option>
                <option value="telefone_fixo" {{#if (eq data.origem "telefone_fixo")}}selected{{/if}}>Telefone Fixo</option>
            </select>
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Data do Contato:</label>
            <input type="date" name="data_contato" class="form-control" id="data_contato" aria-describedby="emailHelp" value="{{data.data_contato}}">
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Observação:</label>
            <textarea name="observacao" class="form-control" placeholder="" id="observacao" style="height: 100px">{{data.observacao}}</textarea>
        </div>
        <div class="mb-3 text-start">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</p>
        
